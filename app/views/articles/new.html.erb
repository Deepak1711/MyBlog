<h1>New Article</h1>

<% if @article.errors.any? %>
	<h2><%= pluralize(@article.errors.count,"Error")%> Prohibted this article from being saved:</h2>
	<ul>
	<% @article.errors.full_messages.each do |error| %>
	<li><%= error %></li>
	<% end %>
	</ul>
<% end %>

<%= form_for :article,url: articles_path do |f| %>
<p>
  	<%= f.label :title %>
  	<%= f.text_field :title %>
</p>
<p>
	<%= f.label :text %>
	<%= f.text_area :text %>
</p>
<p>
	<%= f.submit %>
</p>
<% end %>

<%= link_to 'Back',articles_path%>